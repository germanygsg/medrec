# Environment Variables
# Copy this file to .env and modify as needed

# Node Environment (development | production | test)
NODE_ENV=development

# Database Configuration
# For production, use a secure connection string with SSL
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/postgres
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Authentication
# IMPORTANT: Generate a secure secret for production (min 32 characters)
# You can use: openssl rand -base64 32
BETTER_AUTH_SECRET=your_secret_key_here_minimum_32_characters_required
BETTER_AUTH_URL=http://localhost:3000
NEXT_PUBLIC_BETTER_AUTH_URL=http://localhost:3000

# Production Configuration Example:
# NODE_ENV=production
# DATABASE_URL=postgresql://user:password@production-db-host:5432/dbname?sslmode=require
# BETTER_AUTH_SECRET=your_production_secret_here
# BETTER_AUTH_URL=https://yourdomain.com
# NEXT_PUBLIC_BETTER_AUTH_URL=https://yourdomain.com