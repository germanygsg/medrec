# Environment Variables
# Copy this file to .env and modify as needed

# Node Environment (development | production | test)
NODE_ENV=development

# Database Configuration
# For production, use a secure connection string with SSL
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/postgres
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Production Configuration Example:
# NODE_ENV=production
# DATABASE_URL=postgresql://user:password@production-db-host:5432/dbname?sslmode=require

# Authentication Configuration
# Better Auth secret key (generate with: openssl rand -base64 32)
BETTER_AUTH_SECRET=your-secret-key-here
BETTER_AUTH_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# OAuth 2.0 Providers (optional)
# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Microsoft OAuth
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=